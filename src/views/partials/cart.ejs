        <% if(typeof(cart) !== "undefined") { %>
            <%  
                console.log("cart: ", cart);
                cart.forEach((item) => {
            %>
                <ul class="py-1" aria-labelledby="dropdown">
                    <li>
                        <a class="text-sm hover:bg-gray-100 text-gray-700 block px-4 py-2">
